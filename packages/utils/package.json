{
  "name": "@turfman/utils",
  "version": "0.0.1",
  "author": "Rupak Sapkota <rupaksapkota2000@gmail.com>",
  "homepage": "https://theturfman.com.au",
  "repository": {
    "type": "git",
    "url": "git@github.com:Prorupak/turfman.git"
  },
  "bugs": {
    "url": "https://github.com/Prorupak/turfman/issues"
  },
  "keywords": [
    "turfman",
    "utils",
    "utility",
    "functions"
  ],
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "minify": true,
    "external": [
      "react",
      "node"
    ]
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsup --watch",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist/**"
  ],
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/jest": "^29.5.2",
    "@types/ms": "^0.7.34",
    "@types/node": "^22.4.0",
    "@types/punycode": "^2.1.4",
    "@types/react": "^18.3.5",
    "jest": "^29.7.0",
    "next": "15.0.0-rc.0",
    "react": "19.0.0-rc-f994737d14-20240522",
    "ts-jest": "^29.1.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@turfman/ui": "^0.0.1",
    "clsx": "^2.1.1",
    "ms": "^2.1.3",
    "tailwind-merge": "^2.5.2"
  },
  "peerDependencies": {
    "next": "15.0.0-rc.0",
    "react": "19.0.0-rc-f994737d14-20240522"
  }
}